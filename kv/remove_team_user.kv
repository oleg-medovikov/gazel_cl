<RemoveTeamUserUI>:
	BoxLayout:
		orientation: 'vertical'
		spacing: cm(0.5)
		padding_horizontal: cm(1)
		Label:
			id: description
			font_size: cm(0.5)
			size_hint_x: None
			width: cm(8)
			text_size: cm(8), cm(10)
			pos_hint: {'center_x': 0.5, 'center_y': 0.5}
			halign: "left"
		
		Label:
			id: message
			text: ""
			size_hint_y: None
			height: cm(2)
			size_hint_x: None
			width: cm(8)
			font_size: cm(0.5)
			text_size: cm(8),cm(2)
			pos_hint: {'center_x': 0.5, 'center_y': 0.5}
			halign: 'center'
			valign: 'bottom'
		
		BoxLayout:
			orientation: 'horizontal'
			size_hint_y: None
			height: cm(3.5)
			padding: cm(1)
			spacing: cm(1)
			Button:
				id: back
				text: 'назад'
				on_press: root.return_project_team()
			Button:
				id: remove_user
				text: 'удалить'
				on_press: root.remove_user_from_team()

