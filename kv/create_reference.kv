<CreateReferenceUI>:
	BoxLayout:
		orientation: 'vertical'
		spacing: cm(0.5)
		padding_horizontal: cm(1)
		Label:
			id: message
			text: "Создайте новое определение"
			size_hint_y: None
			height: cm(2)
			size_hint_x: None
			width: cm(8)
			font_size: cm(0.5)
			text_size: cm(8),cm(4)
			pos_hint: {'center_x': 0.5, 'center_y': 0.5}
			halign: 'center'
			valign: 'middle'

		TextInput:
			id: level1
			multiline:False
			hint_text:"level1"
			size_hint: None,None
			width: '8cm'
			height: cm(1.5)
			font_size: root.font_input_size
			pos_hint: {'center_x': 0.5, 'center_y': 0.5}
			padding : self.height/2 - self.font_size/2
			insert_text: root.insert_level1

		BoxLayout:
			orientation: 'horizontal'
			size_hint: None,None
			width:  cm(8)
			height: cm(1.5)
			spacing: cm(1)
			pos_hint: {'center_x': 0.5, 'center_y': 0.5}
			
			TextInput:
				id: level2
				multiline:False
				hint_text:"level2"
				font_size: root.font_input_size
				size_hint_x: None
				width: cm(4.5)
				insert_text: root.insert_level2

			TextInput:
				id: level3
				multiline:False
				hint_text:"level3"
				font_size: root.font_input_size
				insert_text: root.insert_level3

		TextInput:
			id: reference_name
			multiline:False
			hint_text:"Наименование"
			size_hint: None,None
			size_hint_x: None
			width: '8cm'
			height:'2cm'
			font_size: root.font_input_size
			pos_hint: {'center_x': 0.5, 'center_y': 0.5}
			padding : self.height/2 - self.font_size/2

		BoxLayout:

		BoxLayout:
			orientation: 'horizontal'
			size_hint_y: None
			height: cm(3.5)
			padding: cm(1)
			spacing: cm(1)
			Button:
				id: back_project
				text: 'назад'
				on_press: root.return_project()
			Button:
				id: add
				text: 'Создать'
				on_press: root.create_reference()



