<ViewUserUI>:
	BoxLayout:
		orientation: 'vertical'
		spacing: cm(0.5)
		padding_horizontal: cm(1)
		Label:
			id: description
			font_size: root.font_text_size
			size_hint_x: None
			width: dp(0.8*root.width)
			text_size: dp(0.8*root.width), cm(12)
			pos_hint: {'center_x': 0.5, 'center_y': 0.5}
			halign: "left"
			valign: 'bottom'
		
		Label:
			id: error
			font_size: root.font_text_size
			size_hint_x: None
			width: dp(0.8*root.width)
			text_size: dp(0.8*root.width), cm(4)
			pos_hint: {'center_x': 0.5, 'center_y': 0.5}
			halign: "center"
			valign: "bottom"

		TextInput:
			id: password1
			multiline:False
			hint_text: 'Новый пароль'
			password: True
			size_hint: None,None
			width: dp(0.8*root.width)
			height: cm(1.5)
			font_size: root.font_input_size
			pos_hint: {'center_x': 0.5, 'center_y': 0.5}
			padding : self.height/2 - self.font_size/2
		TextInput:
			id: password2
			multiline:False
			hint_text: 'Повторите пароль'
			password: True
			size_hint: None,None
			width: dp(0.8*root.width)
			height: cm(1.5)
			font_size: root.font_input_size
			pos_hint: {'center_x': 0.5, 'center_y': 0.5}
			padding : self.height/2 - self.font_size/2

		BoxLayout:
			orientation: 'horizontal'
			size_hint: None, None
			height: cm(3.5)
			width: dp(0.8*root.width)
			pos_hint: {'center_x': 0.5, 'center_y': 0.5}
			spacing: cm(1)
			padding: (0,cm(1),0,cm(1))
			Button:
				id: back
				text: 'назад'
				on_press: root.return_users()
			Button:
				id: new_pass
				text: 'Обновить пароль'
				on_press: root.password_update()
	


