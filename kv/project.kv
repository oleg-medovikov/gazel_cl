<ProjectUI>:
	BoxLayout:
		orientation: 'vertical'

		Label:
			id: description
			font_size: root.font_text_size
			size_hint_x: None
			width: dp(0.8*root.width)
			text_size: dp(0.8*root.width),cm(4)
			pos_hint: {'center_x': 0.5, 'center_y': 0.5}
	
		BoxLayout:
			orientation: 'horizontal'
			size_hint_x: None
			width: dp(0.8*root.width)
			pos_hint: {'center_x': 0.5, 'center_y': 0.5}
			ScrollView:
				background:  0, 0, 0, 1
				do_scroll_x: False
				do_scroll_y: True
				bar_color: 5, 10, 15, .8
				bar_inactive_color: 5, 20, 10, .5
				scroll_type: ['bars']
				GridLayout:
					size_hint_y: None
					height: self.minimum_height
					id: level1
					spacing: "5dp", "5dp"
					padding: ("0dp", "0dp", "0dp", "20dp")
					cols:1
					row_force_default: True
					row_default_height: cm(1.5)
			
			ScrollView:
				background:  0, 0, 0, 1
				do_scroll_x: False
				do_scroll_y: True
				bar_color: 5, 10, 15, .8
				bar_inactive_color: 5, 20, 10, .5
				scroll_type: ['bars']
				GridLayout:
					size_hint_y: None
					height: self.minimum_height
					id: level2
					spacing: "5dp", "5dp"
					padding: ("20dp", "0dp", "0dp", "20dp")
					cols:1
					row_force_default: True
					row_default_height: cm(1.5)

			ScrollView:
				background:  0, 0, 0, 1
				do_scroll_x: False
				do_scroll_y: True
				size_hint_x: None
				width: cm(3)
				bar_color: 5, 10, 15, .8
				bar_inactive_color: 5, 20, 10, .5
				scroll_type: ['bars']
				GridLayout:
					size_hint_y: None
					height: self.minimum_height
					id: level3
					spacing: "5dp", "5dp"
					padding: ("20dp", "0dp", "0dp", "0dp")
					cols:1
					row_force_default: True
					row_default_height: cm(1.5)

		BoxLayout:
			orientation: 'horizontal'
			size_hint: None, None
			height: cm(2.5)
			width: dp(0.8*root.width)
			pos_hint: {'center_x': 0.5, 'center_y': 0.5}
			spacing: cm(1)
			padding: (0,cm(1),0,0)

			Button:
				id: project_log
				text: 'Лог проекта'
				on_press: root.view_logs()
			
			Button:
				id: add_reference
				text: 'Добавить обозн.'
				on_press: root.add_reference()

		BoxLayout:
			orientation: 'horizontal'
			size_hint: None, None
			height: cm(3)
			width: dp(0.8*root.width)
			pos_hint: {'center_x': 0.5, 'center_y': 0.5}
			spacing: cm(1)
			padding: (0,cm(0.5),0,cm(1))
	
			Button:
				id: back
				text: 'назад'
				on_press: root.return_main()
			Button:
				id: new_user
				text: 'Команда проекта'
				on_press: root.view_team()
