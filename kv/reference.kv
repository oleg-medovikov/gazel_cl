<ReferenceUI>:
	BoxLayout:
		orientation: 'vertical'
		spacing: cm(1)
		Label:
			id: r_name
			font_size: root.font_text_size
			size_hint: None, None
			width: dp(0.8*root.width)
			height: cm(4)
			text_size: dp(0.8*root.width),cm(4)
			pos_hint: {'center_x': 0.5, 'center_y': 0.5}
	

		ScrollView:
			do_scroll_x: False
			do_scroll_y: True
			size_hint_x: None
			width: dp(0.8*root.width)
			pos_hint: {'center_x': 0.5, 'center_y': 0.5}
			bar_color: 5, 10, 15, .8
			bar_inactive_color: 5, 20, 10, .5
			scroll_type: ['bars']
			canvas.before:
				Color:
					rgba: 0.42, 0.42, 0.42, 1
				Rectangle:
					size: self.size
					pos: self.pos
			GridLayout:
				size_hint_y: None
				height: self.minimum_height
				id: files_grid
				padding: "5dp"
				spacing: "5dp", "5dp"
				cols:1
				row_force_default: True
				row_default_height: cm(1.5)

		ScrollView:
			id: log_scroll
			do_scroll_x: False
			do_scroll_y: True
			size_hint: None,None
			width: dp(0.8*root.width)
			height: cm(2)
			pos_hint: {'center_x': 0.5, 'center_y': 0.5}
			bar_color: 5, 10, 15, .8
			bar_inactive_color: 5, 20, 10, .5
			scroll_type: ['bars']
			canvas.before:
				Color:
					rgba: 0.42, 0.42, 0.42, 1
				Rectangle:
					size: self.size
					pos: self.pos
			GridLayout:
				size_hint_y: None
				height: self.minimum_height
				id: log_grid
				padding: "5dp"
				spacing: "5dp", "5dp"
				cols:1
				row_force_default: True
				row_default_height: cm(0.5)

		BoxLayout:
			orientation: 'horizontal'
			size_hint: None, None
			height: cm(3)
			width: dp(0.8*root.width)
			pos_hint: {'center_x': 0.5, 'center_y': 0.5}
			spacing: cm(1)
			padding: (0,cm(0.5),0,cm(1))
	
			Button:
				id: back
				text: 'назад'
				on_press: root.return_project()
			Button:
				id: load_files
				text: 'Синхронизация'
				on_press: root.synchronization()
