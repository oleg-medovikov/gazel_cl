<LoginUI>:
	BoxLayout:
		orientation: 'vertical'
		spacing:'1.3cm'
		padding:'1.5cm'
		Image:       
			source:"img/domy.png"
			size_hint_y: None
			height:"2.5cm"
		Label:
			id : error
			text:'Авторизация'
			font_size: root.font_text_size
			size_hint_x: None
			width: dp(0.8*root.width)
			text_size: cm(8), cm(4)
			pos_hint: {'center_x': 0.5, 'center_y': 0.5}
			halign: "center"
			valign: "middle"
		TextInput:
			id: username
			multiline:False
			hint_text:"Username"
			size_hint: None,None
			width: dp(0.8*root.width)
			height:'1.5cm'
			font_size: root.font_input_size
			pos_hint: {'center_x': 0.5, 'center_y': 0.5}
			padding : self.height/2 - self.font_size/2
			insert_text: root.insert_text
			
		TextInput:
			id: password
			multiline:False
			size_hint: None,None
			width: dp(0.8*root.width)
			height:'1.5cm'
			hint_text:"Password"
			font_size: root.font_input_size
			password:True
			pos_hint: {'center_x': 0.5, 'center_y': 0.5}
			padding : self.height/2 - self.font_size/2

		Button:
			size_hint: None, None
			width: dp(0.8*root.width)
			text:'Войти'
			font_size: root.font_text_size
			pos_hint: {'center_x': 0.5, 'center_y': 0.5}
			on_press: root.try_log_in() 

		BoxLayout:
			orientation:'horizontal'
			size_hint_x: None
			pos_hint: {'center_x': 0.5, 'center_y': 0.5}
			width: dp(0.8*root.width)
			Label:
				text:'Разработано '
				font_size:'0.32cm'
				halign:'left'
			Label:
				text:'Медовиков О.Е.'
				font_size:'0.45cm'
				color:0,1,1,1
