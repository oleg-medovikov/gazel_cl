<MainScreen>:
    BoxLayout:
        orientation: 'vertical'
		spacing: cm(1)
		padding_horizontal: cm(1)
		Label:
			id: hello
			font_size: root.font_text_size
			size_hint: None, None
			height: cm(3.5)
			width: dp(0.8*root.width)
			pos_hint: {'center_x': 0.5, 'center_y': 0.5}

		ScrollView:
            background:  0, 0, 0, 1
            do_scroll_x: False
            do_scroll_y: True
			size_hint_x: None
			width: dp(0.8*root.width)
			pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            bar_color: 5, 10, 15, .8
            bar_inactive_color: 5, 20, 10, .5
            scroll_type: ['bars']
            GridLayout:
                id: projects_grid
                size_hint_y: None
                height: self.minimum_height
                spacing: "5dp", "5dp"
                cols:1
                row_force_default: True
                row_default_height: cm(1.5)

		BoxLayout:
			orientation: 'horizontal'
			size_hint: None, None
			height: cm(3.5)
			width: dp(0.8*root.width)
			pos_hint: {'center_x': 0.5, 'center_y': 0.5}
			spacing: cm(1)
			padding: (0,cm(1),0,cm(1))
			Button:
				id: logout
				text: 'Выйти'
				font_size: root.font_text_size
				on_press: root.logout()
			Button:
				id: users
				text: 'Сотрудники'
				font_size: root.font_text_size
				on_press: root.see_users()
