<LogsUI>:
	BoxLayout:
		orientation: 'vertical'
		padding: cm(1.5)
		spacing: cm(0.4)

		Label:
			id: description
			font_size: root.font_text_size
			size_hint: None, None
			height: cm(2) 
			width: dp(0.8*root.width)
			text_size: dp(0.8*root.width),cm(2)
			pos_hint: {'center_x': 0.5, 'center_y': 0.5}
			valign: "top"
	
		ScrollView:
			background:  0, 0, 0, 1
			size_hint_y: None
			height: cm(1.5)
			do_scroll_x: True
			do_scroll_y: False
			bar_color: 5, 10, 15, .8
			bar_inactive_color: 5, 20, 10, .5
			size_hint_x: None
			width: dp(0.8*root.width)
			pos_hint: {'center_x': 0.5, 'center_y': 0.5}
			scroll_type: ['bars']
			GridLayout:
				size_hint_y: None
				height: self.minimum_height
				id: dates_grid
				spacing: "5dp", "5dp"
				row_force_default: True
				row_default_height: cm(1.5)
		
		ScrollView:
			background:  0, 0, 0, 1
			do_scroll_x: False
			do_scroll_y: True
			bar_color: 5, 10, 15, .8
			bar_inactive_color: 5, 20, 10, .5
			size_hint_x: None
			width: dp(0.8*root.width)
			pos_hint: {'center_x': 0.5, 'center_y': 0.5}
			scroll_type: ['bars']
			canvas.before:
				Color:
					rgba: 0.42, 0.42, 0.42, 1
				Rectangle:
					size: self.size
					pos: self.pos
			GridLayout:
				size_hint_y: None
				height: self.minimum_height
				id: logs_grid
				cols:4
				padding: (cm(0.1), cm(0.4), cm(0.4), cm(0.4))
				row_force_default: True
				row_default_height: cm(2)

		BoxLayout:
			orientation: 'horizontal'
			size_hint: None, None
			height: cm(3)
			width: dp(0.8*root.width)
			pos_hint: {'center_x': 0.5, 'center_y': 0.5}
			spacing: cm(1)
			padding: (0,cm(0.5),0,cm(1))
	
			Button:
				id: back
				text: 'назад'
				on_press: root.return_project()
			Button:
				id: refresh
				text: 'Обновить'
				on_press: root.refresh()
