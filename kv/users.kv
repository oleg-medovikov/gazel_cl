<UsersUI>:
	BoxLayout:
		orientation: 'vertical'
		spacing: cm(1.5)
		padding_horizontal: cm(1.5)
		BoxLayout:
			orientation: 'horizontal'
			size_hint_y: None
			height: cm(1.5)
			Label:
				text: "Существующие в системе пользователи"
				font_size: cm(0.5)
		ScrollView:
            background:  0, 0, 0, 1
            do_scroll_x: False
            do_scroll_y: True
            size_hint_y: .9
			size_hint_x: None
			width: cm(8)
			pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            bar_color: 5, 10, 15, .8
            bar_inactive_color: 5, 20, 10, .5
            scroll_type: ['bars']
            GridLayout:
                size_hint_y: None
                height: self.minimum_height
                id: users_grid
                spacing: "5dp", "5dp"
                padding: ("20dp", "0dp", "0dp", "20dp")
                cols:1
                row_force_default: True
                row_default_height: cm(1.5)

		BoxLayout:
			orientation: 'horizontal'
			size_hint_y: None
			height: cm(3.5)
			padding: cm(1)
			spacing: cm(1)
			Button:
				id: back
				text: 'назад'
				on_press: root.return_main()
			Button:
				id: new_user
				text: 'Создать'
				on_press: root.add_user()
				
